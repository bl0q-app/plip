{
  "name": "@ru-dr/plip",
  "version": "1.0.1",
  "description": "A minimal, modern, colorful, and emoji-friendly JavaScript logger library",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bun run build:clean && bun run build:ts",
    "build:clean": "rm -rf dist",
    "build:ts": "tsc",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "dev": "bun run src/index.ts",
    "prepublishOnly": "bun run build && bun test",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "version:prerelease": "npm version prerelease",
    "release": "bun run build && bun test && npm publish",
    "release:beta": "bun run build && bun test && npm publish --tag beta"
  },
  "keywords": [
    "logger",
    "logging",
    "console",
    "emoji",
    "colorful",
    "typescript",
    "minimal",
    "modern",
    "cli-color",
    "syntax-highlighting",
    "colors",
    "cli"
  ],
  "author": "rudra",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ru-dr/plip.git"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cli-color": "^2.0.6"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "cli-color": "^2.0.4"
  }
}
